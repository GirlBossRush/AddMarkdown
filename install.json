{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./helper.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "EagerAddMarkdown.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "foobar": {
        "order": 0,
        "title": "Richer!",
        "type": "string",
        "format": "richtext",
        "placeholder": "Begin typing..."
      },
      "blocks": {
        "title": "Markdown blocks to add",
        "description": "You can also replace a part of your page by setting: “Place it in the location (replace it).”",
        "order": 1,
        "type": "array",
        "items": {
          "title": "Markdown Block",
          "type": "object",
          "properties": {
            "location": {
              "order": 2,
              "title": "Location",
              "description": "Where on the page would you like to add your elements?",
              "type": "object",
              "format": "element",
              "default": {
                "selector": "body",
                "method": "prepend"
              }
            },
            "code": {
              "order": 0,
              "title": "Markdown code",
              "type": "string",
              "format": "markdown"
            },
            "rich": {
              "order": 1,
              "title": "Richtext",
              "type": "string",
              "format": "richtext"
            }
          }
        }
      }
    }
  }
}
